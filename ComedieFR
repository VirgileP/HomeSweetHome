/*-----------------------------------------*/

/* type global */
struct client
    {
      char	nom[T_MAX_NOM]      ;
      char	prenom[T_MAX_PRENOM];
      int	numabo                ;
    };

/* variables globales */
struct client tabclient[MAX_CLIENT] ;
int nbclient=0                  ;



/*-----------------------------------------*/
main()
{
	int choix = -1;
	
	while (choix != 0)
	{
		printf("-------------------\n");
		printf("Comédie Française\n");
		printf("--------------------\n\n");
		
		printf("-1- Programation\n");
		printf("-2- Réservation\n")	;
		printf("-3- Tarifs\n")		;
		printf("-4- Annulation\n")	; //à valider?
		printf("-5- Administration\n");	//login mdp			
		printf("-0- Quitter\n")		;
		printf("Choix : ")			;
		scanf("%d",&choix)			;
		
		switch(choix)
		{
			case 1: programation();
					break	;
			case 2: reservation()	;
					break		;
			case 3: tarifs()	;
					break	;
			case 4: annulation()	;
					break	;
			case 5: administration();
					break;
			case 0: printf("Au revoir")	;
					break				;
			default : printf("Erreur de saisie\n")	;
					break							;
		}
		
	}
}


/*-----------------------------------------*/
