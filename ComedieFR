#include <stdio.h>
#include <ctype.h>

/*----------Declaration preliminaire-------------------------------*/

void programation();
void reservation();
void tarifs();
void annulation();
void administration();

void sauvegarder();
void enregistrer();
void affichage();
void paiement();
void saisie();
int recherchemultiocc(char nomrech[T_MAX_NOM], int tabres[]) ;


/*-----------------------------------------*/
main()
{
	int choix = -1;
	
	while (choix != 0)
	{
		printf("-1- Programation\n");
		printf("-2- Réservation\n")	;
		printf("-3- Tarifs\n")		;
		printf("-4- Annulation\n")	; //à valider?
		printf("-5- Administration\n");	//login mdp			
		printf("-0- Quitter\n")		;
		printf("Choix : ")			;
		scanf("%d",&choix)			;
		
		switch(choix)
		{
			case 1: programation();
					break	;
			case 2: reservation()	;
					break		;
			case 3: tarifs()	;
					break	;
			case 4: annulation()	;
					break	;
			case 5: administration();
					break;
			case 0: printf("Au revoir")	;
					break				;
			default : printf("Erreur de saisie\n")	;
					break							;
		}
		
	}
}

/*-----------------------------------------*/
void programation()
{
	printf("Programmation....");
}
/*-----------------------------------------*/
